            <input type="text" name="job" value="" placeholder="Enter Here" required/>
            <input type="submit" value="ADD"/>
        </form>
        <% let i = 1 %>
        <% if(locals.list) {%>
        <% if(list.length !== 0){ %>
        <% list.forEach((item)=>{ %>
                <div class="todo">
                    <h4>üìù(<%= i++ %>) <%= item.todo_name %></h4>
                    <a href="/delete/<%= item.id%>" >Delete</a>
                </div>
        <% }) %>
        <% } }else {%>
            <h3>Add Some Pending Works</h3>
        <% } %>
        <a href="/logout" class="logout">Log Out</a>
    </div>
</body>
</html>